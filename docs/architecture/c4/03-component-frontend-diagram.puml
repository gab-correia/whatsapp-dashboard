@startuml WhatsApp Dashboard - Frontend Components
!include https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Component.puml

LAYOUT_WITH_LEGEND()

title Diagrama de Componentes - Frontend React

Person(user, "Usuário", "Administrador/Operador")
Container(api, "Backend API", "Django", "API REST")

Container_Boundary(frontend, "Frontend - React") {
    Component(router, "Router", "React Router 6", "Gerencia rotas e navegação")
    Component(pages, "Pages", "React Components", "- Connection\n- Dashboard\n- Messages\n- Contacts")
    Component(components, "UI Components", "React + Tailwind", "- StatCard\n- Layout\n- Navigation")
    Component(hooks, "Custom Hooks", "React Hooks", "- useMessages\n- useContacts\n- useDashboard")
    Component(services, "API Services", "Axios", "- api.ts\n- messagesService\n- contactsService")
    Component(types, "TypeScript Types", "TypeScript", "Interfaces e tipos")
}

' Usuário
Rel(user, router, "Navega", "Browser")

' Componentes internos
Rel(router, pages, "Renderiza páginas")
Rel(pages, components, "Usa componentes UI")
Rel(pages, hooks, "Consome dados")
Rel(hooks, services, "Faz requisições")
Rel(services, types, "Tipagem forte")

' External
Rel(services, api, "HTTP Requests", "JSON/HTTPS")

SHOW_LEGEND()
@enduml
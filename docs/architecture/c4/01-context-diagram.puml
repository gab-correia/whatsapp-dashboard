@startuml WhatsApp Dashboard - Context Diagram
!include https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Context.puml

LAYOUT_WITH_LEGEND()

title Diagrama de Contexto - WhatsApp Dashboard

Person(admin, "Administrador", "Gerencia instâncias WhatsApp e monitora mensagens")
Person(operator, "Operador", "Visualiza mensagens e contatos")
Person(customer, "Cliente", "Envia mensagens via WhatsApp")

System(whatsapp_dashboard, "WhatsApp Dashboard", "Sistema de gerenciamento e monitoramento de mensagens WhatsApp com processamento em tempo real")

System_Ext(evolution_api, "Evolution API", "API não-oficial do WhatsApp Web v2.1.1 para integração programática")
System_Ext(whatsapp_service, "WhatsApp", "Serviço de mensagens instantâneas WhatsApp")

Rel(admin, whatsapp_dashboard, "Cria instâncias\nVisualiza dashboard\nGerencia conexões", "HTTPS/Web")
Rel(operator, whatsapp_dashboard, "Visualiza mensagens\nFiltra contatos", "HTTPS/Web")
Rel(customer, whatsapp_service, "Envia mensagens", "WhatsApp App")

Rel(whatsapp_service, evolution_api, "Conecta via WhatsApp Web", "WebSocket")
Rel(evolution_api, whatsapp_dashboard, "Envia webhooks com mensagens", "HTTP POST")
Rel(whatsapp_dashboard, evolution_api, "Cria instâncias\nObtém QR Code\nConfigura webhooks", "REST API")

SHOW_LEGEND()
@enduml

